.panel.panel-default
  .panel-heading
    h5.panel-title
      a(data-toggle='collapse', href='#item-get')
        h1 項目取得処理
  #item-get.panel-collapse.collapse
    .panel-body
      .panel.panel-default
        .panel-heading
          h5.panel-title 選択項目取得テスト
        .panel-body
          form(method='post', class='form-horizontal', id='get-select-item-form')
            .form-group.form-group-lg
              label(for='selectItem', class='control-label col-sm-4') 選択項目(カンマ区切りで指定)
              .col-sm-8
                input(type='text', name='selectItem', value='', id='get-select-item-selectItem', class='form-control', placeholder='選択項目')

            .form-group.form-group-lg
              label(for='get-select-item-ApiKey', class='control-label col-sm-4') APIキー
              .col-sm-8
                input(type='text', name='apiKey', value='', id='get-select-item-ApiKey', class='form-control', placeholder='APIキー', disabled)
            .form-group.form-group-lg
              label(for='get-select-item-SessionKey', class='control-label col-sm-4') セッションキー
              .col-sm-8
                input(type='text', name='sessionKey', value='', id='get-select-item-SessionKey', class='form-control', placeholder='セッションキー', disabled)

            <br>
            button(type='button', id='get-select-item', class='btn btn-primary btn-block btn-lg')
              span(class='glyphicon glyphicon-log-in', aria-hidden='true')
              span 選択項目取得
            button(type='button', id='get-select-item-clear', class='btn btn-lg btn-block btn-default') クリア
            <hr>
            .form-group.form-group-lg
              label(for='get-select-item-result', class='control-label col-sm-4') 選択項目取得結果
              .col-sm-8
                textarea(id='get-select-item-result', class='form-control', placeholder='CSRFトークン再取得結果', disabled rows='10')
